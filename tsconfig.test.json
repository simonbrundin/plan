{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "allowJs": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "rootDirs": ["./", "./__tests__"],
    "baseUrl": ".",
    "paths": {
      "@/datamodell/*": ["datamodell/*"],
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}